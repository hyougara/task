<div class="container">
    <div class="content">
        <h1>Task Manager</h1>
        <h2>自己管理はちゃんとしましょう</h2>
        <% if logged_in? %>
        <div class="row">
            <aside class="col-md-4">
                <section>
                <%= render 'shared/user_info' %>
                </section>
                <section>
                <%= render 'shared/micropost_form' %>
                </section>
            </aside>
            <div class="col-md-8">
                <h3>Micropost Feed</h3>
                <%= render 'shared/feed' %>
            </div> 
        </div>
        <% else %>
        <div class="create-account">
            <p>アカウントを作成する方はこちら</p>
            <p>↓</p>
            <h3><%= link_to image_tag("create.GIF",alt:"create",size:"200x80"),signup_path %></h3>
        </div>
        <% end %>
    </div>
</div>
