<%= form_for @micropost do |form| %>


<div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
</div>

<div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
</div>

<div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :name %>
</div>

<div class="field">
    <%= form.label :status %>
    <%= form.select :status, Micropost.statuses.keys, :selected=>Micropost.statuses[@micropost.status] %>
</div>


<div class="actions">
    <%= form.submit "作成"%>
</div>
<% end %>